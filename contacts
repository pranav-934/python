print("*****contacts-info*****")
contact_details=[]
print(f"enter the contact details")
number_of_contacts=int(input("enter the number of contacts you want to add:- "))
for i in range(number_of_contacts):
    contacts={}
    contacts['name']=input(f"enter the name of contact{i+1}")
    contacts['number']=int(input(f"enter the phno{i+1}"))
    contact_details.append(contacts)
print("name    number")
for contact in contact_details:
   
    print(f"{contact['name']}:-{contact['number']}")
while True:
    choice=input("do you want to add contacts")
    choice=choice.upper()
    if choice=='YES':
        number_of_contacts1=int(input("enter the number of contacts you want to add:- "))
        for k in range(number_of_contacts1):
            contacts={}
            contacts['name']=input(f"enter the name of new contact{i+1}")
            contacts['number']=int(input(f"enter the new phno{i+1}"))
            contact_details.append(contacts)
        print("name  number")
        for contact in contact_details:
        
            print(f"{contact['name']}:-{contact['number']}")
    if choice=='NO':
            break

    
    
    
